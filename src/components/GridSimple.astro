---
interface Props {
	variant?: 'tight' | 'loose';
}

const { variant } = Astro.props;
---

<ul class:list={['list', { offset: variant === 'tight', small: variant === 'loose' }]}>
	<slot />
</ul>

<style>
	.list {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		list-style: none;
		padding: 2rem 0;
	}

	@media (min-width: 50em) {
		.list {
			display: flex;
			flex-direction: column;
			gap: 2rem;
			list-style: none;
			padding: 2rem 0;
		}
	}
</style>
